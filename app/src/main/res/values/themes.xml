<resources>
    <!-- Base application theme. -->
    <style name="Theme.CitizenMeCase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorPrimary">@color/drag_light</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">4dp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="BodyText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyItemText" parent="BodyText">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">3</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/CardShape</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_light</item>
    </style>

    <style name="CardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CommentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_light</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/text_dark</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/text_dark</item>
        <item name="colorOnSurface">@color/background_dark</item>
    </style>

    <style name="ConstraintLayoutStyle" parent="">
        <item name="background">@color/card_bottom_sheet_light</item>
    </style>

    <style name="DragViewStyle" parent="">
        <item name="android:background">@color/drag_light</item>
    </style>
</resources>