<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CitizenMeCase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorPrimary">@color/drag_dark</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="BodyText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyItemText" parent="BodyText">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">3</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/CardShape</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_dark</item>
    </style>

    <style name="CardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>